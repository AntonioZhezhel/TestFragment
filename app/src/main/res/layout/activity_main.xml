<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <Button
        android:id="@+id/buttonFollow"
        style="@android:style/Widget.Material.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#00000000"
        android:onClick="openFollowFragment"
        android:text="@string/follow_your_dream"
        android:textSize="25sp"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/textViewCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/buttonPositive"
        style="@android:style/Widget.Material.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#00000000"
        android:onClick="openPositiveFragment"
        android:text="@string/be_positive"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:targetApi="lollipop" />

</RelativeLayout>